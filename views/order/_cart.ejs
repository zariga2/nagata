<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>Document</title>
        <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <script src="/lib/bootstrap/js/jquery-3.4.1.min.js"></script>
        <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- === less === -->
        <link rel="stylesheet/less" href="/src/less/order/_cart.less" />
        <script src="/lib/less/less.min.js"></script>
    </head>
    <body>
        <!-- === header === -->
        <%- include('../header') %>

        <main>
            <!-- === main1FirstHeader === -->
            <%- include('./main1FirstHeader.ejs') %>

            <!-- === cart === -->
            <div class="cart">
                <!-- === title === -->
                <div class="title">
                    <div class="row">
                        <div class="col-md-3 mainTitle">お買い物かご</div>
                        <div class="col-md-9">
                            下記の商品を購入する場合は、購入手続きへお進みください。
                        </div>
                    </div>
                </div>

                <!-- === cartContent === -->
                <div class="cartContent">
                    <div class="image">
                        <img
                            src="/src/images/order/cart/pic1.png"
                            alt="image"
                        />
                    </div>
                    <div class="detail">
                        <!-- === productDetail 商品情報 === -->
                        <div class="productDetail">
                            <div class="row">
                                <!-- === 商品名 === -->
                                <div class="col-md-7">
                                    商品名１
                                </div>
                                <!-- === 単価・数量・金額 === -->
                                <div class="col-md-5">
                                    <div class="row">
                                        <!-- === 単価 === -->
                                        <div class="col-4">
                                            ￥金額
                                        </div>

                                        <!-- === 数量 === -->
                                        <div class="col-4">
                                            <select name="" id="">
                                                <option value="1">1</option>
                                            </select>
                                        </div>

                                        <!-- === 金額 === -->
                                        <div class="col-4">
                                            ￥金額
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- === deliveryMessage 商品の届けのメッセージ === -->
                        <div class="deliveryMessage">
                            <div class="row">
                                <div class="col-md-10">
                                    お届け予定日　：　ご注文後にご連絡致します。
                                </div>
                                <div class="col-md-2">
                                    <button>￥削除</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- === cartContent === -->
                <div class="cartContent">
                    <div class="image">
                        <img
                            src="/src/images/order/cart/pic1.png"
                            alt="image"
                        />
                    </div>
                    <div class="detail">
                        <!-- === productDetail 商品情報 === -->
                        <div class="productDetail">
                            <div class="row">
                                <!-- === 商品名 === -->
                                <div class="col-md-7">
                                    商品名１
                                </div>
                                <!-- === 単価・数量・金額 === -->
                                <div class="col-md-5">
                                    <div class="row">
                                        <!-- === 単価 === -->
                                        <div class="col-4">
                                            ￥金額
                                        </div>

                                        <!-- === 数量 === -->
                                        <div class="col-4">
                                            <select name="" id="">
                                                <option value="1">1</option>
                                            </select>
                                        </div>

                                        <!-- === 金額 === -->
                                        <div class="col-4">
                                            ￥金額
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- === deliveryMessage 商品の届けのメッセージ === -->
                        <div class="deliveryMessage">
                            <div class="row">
                                <div class="col-md-10">
                                    お届け予定日　：　ご注文後にご連絡致します。
                                </div>
                                <div class="col-md-2">
                                    <button>￥削除</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- === result === -->
                <div class="resultBlock row">
                    <!-- === emptyBlock === -->
                    <div class="emptyBlock col-sm-8"></div>

                    <!-- === detailBlock === -->
                    <div class="detailBlock col-sm-4">
                        <!-- === resultDetail === -->
                        <div class="resultDetail">
                            <div>
                                <span>小計　： </span>
                                <span>XXX円</span>
                            </div>
                            <div>
                                <span>送料　： </span>
                                <span>2100円</span>
                            </div>
                            <div>
                                <span>消費税　： </span>
                                <span>XXX円</span>
                            </div>
                        </div>

                        <!-- === border === -->
                        <div class="border"></div>

                        <!-- === total === -->
                        <div class="total">
                            <span>合計：</span>
                            <span>XXX円</span>
                        </div>

                        <!-- === submit === -->
                        <div class="submit">
                            <a class="submitButton" href="./finish"
                                >購入手続きへ</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- === footer === -->
        <%- include('../footer') %>
    </body>
</html>
